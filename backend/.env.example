# Produktionskonfiguration för Nyhetsportalen
# Kopiera till .env och fyll i riktiga värden

# Databas
DATABASE_URL=sqlite:///nyhetsportalen.db

# TED API (EU Tenders Electronic Daily)
TED_API_KEY=your_ted_api_key_here
TED_BASE_URL=https://ted.europa.eu/api/v3.0

# Bolagsverket API
BOLAGSVERKET_API_KEY=your_bolagsverket_api_key_here
BOLAGSVERKET_BASE_URL=https://data.bolagsverket.se/api/v1

# SKR (Sveriges Kommuner och Regioner) API
SKR_API_KEY=your_skr_api_key_here
SKR_BASE_URL=https://api.skr.se

# Offentlig upphandling API
UPPHANDLING_API_KEY=your_upphandling_api_key_here
UPPHANDLING_BASE_URL=https://api.upphandling.se

# Konkurrensverket API
KONKURRENSVERKET_API_KEY=your_konkurrensverket_api_key_here

# Säkerhet
SECRET_KEY=your_super_secret_key_here_change_in_production
ADMIN_PASSWORD=nyheter2025_change_in_production

# Flask konfiguration
FLASK_ENV=production
FLASK_DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/nyhetsportalen.log

# Uppdateringsschema
UPDATE_INTERVAL_HOURS=6
AUTO_UPDATE_ENABLED=True

# Email notifieringar
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
ALERT_EMAIL=alerts@nyhetsportalen.se

# Webhook för Slack/Discord notifieringar
SLACK_WEBHOOK_URL=your_slack_webhook_url
DISCORD_WEBHOOK_URL=your_discord_webhook_url

# Rate limiting
REQUESTS_PER_MINUTE=60
API_RATE_LIMIT=100

# Caching
CACHE_TIMEOUT_MINUTES=30
REDIS_URL=redis://localhost:6379/0
